<Window x:Class="WpfEstates.AddOwnerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfEstates"
        mc:Ignorable="d"
        Title="AddOwnerWindow" Height="450" Width="300">
    <Grid>
        <Label Content="New Owner" HorizontalAlignment="Left" VerticalAlignment="Top" Height="40" Width="300" Background="#FF52BD48" FontSize="20"/>
        
        <Button x:Name="Save" FontSize="15" Margin="10 370 170 0" Click="Save_Click">Save</Button>
        <Button x:Name="Cancel" FontSize="15" Margin="170 370 10 0" Click="Cancel_Click">Cancel</Button>
    </Grid>
</Window>
