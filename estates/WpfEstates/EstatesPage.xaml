<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfEstates"
      xmlns:estates="clr-namespace:estates;assembly=estates" x:Class="WpfEstates.EstatePage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">

    <Page.Resources>
        <CollectionViewSource x:Key="employeesRepositoryViewSource" d:DesignSource="{d:DesignInstance {x:Type estates:EmployeesRepository}, CreateList=True}"/>
    </Page.Resources>

    <Grid DataContext="{StaticResource employeesRepositoryViewSource}">
        <DataGrid x:Name="EstatesDataGrid" HorizontalAlignment="Left" Height="377" VerticalAlignment="Top" Width="800" Margin="0,63,0,0" SelectionChanged="EstatesDataGrid_SelectionChanged"/>
        <Label x:Name="EstatesLabel" Content="Label" HorizontalAlignment="Left" Height="58" VerticalAlignment="Top" Width="800" Background="#FF52BD48" FontSize="20"/>
    </Grid>
</Page>
